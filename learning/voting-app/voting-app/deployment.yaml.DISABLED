---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: voting-app
  namespace: voting-app
  labels:
    app: voting-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: voting-app
  template:
    metadata:
      labels:
        app: voting-app
    spec:
      containers:
      - image: kodekloud/examplevotingapp_vote:v1
        name: voting-app
        ports:
          - containerPort: 80
