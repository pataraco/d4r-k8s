---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: result-app
  namespace: voting-app
  labels:
    app: result-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: result-app
  template:
    metadata:
      labels:
        app: result-app
    spec:
      containers:
      - image: kodekloud/examplevotingapp_result:v1
        name: result-app
        ports:
          - containerPort: 80
#     nodeSelector:
#       kubernetes.io/role: worker
